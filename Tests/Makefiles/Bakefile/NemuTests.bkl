nemupath = envvar("NEMU");
import $(nemupath)/Nemu/Include/NemuFramework/Nemu.bkl;
ishikopath = envvar("ISHIKO");
import $(ishikopath)/TestFramework/Include/Ishiko/TestFramework/TestFrameworkCore.bkl;

toolsets = gnu vs2017 vs2015 vs2013;

gnu.makefile = ../GNUmakefile/GNUmakefile;
vs2017.solutionfile = ../VC15/NemuTests.sln;
vs2015.solutionfile = ../VC14/NemuTests.sln;
vs2013.solutionfile = ../VC12/NemuTests.sln;

program NemuTests : Nemu, IshikoTestFrameworkCore
{
    archs = x86 x86_64;

    headers
    {
        ../../Source/ConfigurationTests.h
    }

    sources
    {
        ../../Source/main.cpp
        ../../Source/ConfigurationTests.cpp
    }
}
